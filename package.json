{
  "name": "copi",
  "description": "Installs NPM package by finding it and copying from another local folder. Completely offline ;)",
  "main": "src/copi.js",
  "version": "0.0.0-semantic-release",
  "bin": {
    "copi": "bin/copi.js"
  },
  "preferGlobal": true,
  "private": false,
  "scripts": {
    "test": "node --harmony node_modules/.bin/rocha src/*-spec.js",
    "lint": "standard bin/*.js src/*.js",
    "commit": "commit-wizard",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "issues": "git-issues",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/copi.git"
  },
  "keywords": [
    "npm",
    "install",
    "offline",
    "cp",
    "copy",
    "local",
    "registry"
  ],
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bahmutov/copi/issues"
  },
  "homepage": "https://github.com/bahmutov/copi#readme",
  "dependencies": {
    "bluebird": "3.1.1",
    "check-more-types": "2.10.0",
    "debug": "2.2.0",
    "express": "5.0.0-alpha.2",
    "glob-promise": "1.0.4",
    "lazy-ass": "1.3.0",
    "morgan": "1.6.1",
    "npm-utils": "1.3.3",
    "semver": "5.1.0",
    "simple-bin-help": "1.5.1"
  },
  "devDependencies": {
    "git-issues": "1.2.0",
    "pre-git": "3.1.2",
    "rocha": "1.6.1",
    "semantic-release": "6.0.3",
    "standard": "5.4.1"
  },
  "files": [
    "bin",
    "src/*.js",
    "!src/*-spec.js"
  ],
  "config": {
    "pre-git": {
      "commit-msg": [
        "simple"
      ],
      "pre-commit": [
        "npm run lint",
        "npm test"
      ],
      "pre-push": [],
      "post-commit": [],
      "post-merge": []
    }
  }
}
